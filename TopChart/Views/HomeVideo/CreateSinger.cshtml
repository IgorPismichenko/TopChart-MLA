@model TopChart_BLL.DTO.SingerDTO

@{
    ViewData["Title"] = "CreateSinger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="width:800px">
    <header>
        <div id="header">
            <a style="font-weight:bold; font-size:14pt; color:white; margin:5px" asp-area="" asp-controller="HomeVideo" asp-action="Video">TOP Chart</a>
            <div style="margin-right: 5px">
                <div>
                    <label style="text-align:center; width: 100px; color:white">Hello @Context.Session.GetString("Login")</label>
                </div>
                <div>
                    <a asp-area="" asp-controller="HomeVideo" asp-action="Logout" style="font-size:10pt; color:white; display: inline-block; width: 100px;">Log out</a>
                </div>
            </div>
        </div>
    </header>
    <div style="display:flex">
        <main id="aside">
            <label style="font-weight:bold; font-size:12pt; color:#2F4F4F; margin:7px 0 0 10px">Menu</label><br />
            <hr style="margin:1px" />
           
            <a style="margin-left:15px; color:#2F4F4F; font-size:12px" asp-area="" asp-controller="HomeAudio" asp-action="Audio">Audio</a><br />
            <a style="margin-left:15px; color:#2F4F4F; font-size:12px" asp-area="" asp-controller="HomeVideo" asp-action="TopVideo">Top Chart</a><br />
            <br /><br />
        </main>
        <aside id="main">
            <div id="mainReg">
                <h5 style="color:#2F4F4F; margin-top:30px">Create new singer</h5>
                <form asp-action="CreateSinger" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div style="text-align:center">
                        <label style="color:#2F4F4F; width:350px; text-align:left" asp-for="Name"></label><br />
                        <input style="width:350px" asp-for="Name" class="formControl" /><br />
                        <span style="font-size: 8pt" asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div style="text-align:center">
                        <label style="color:#2F4F4F; width:350px; text-align:left" asp-for="Path"></label>
                        <input type="file" name="uploadedFile" />
                        <span style="font-size: 8pt" asp-validation-for="Path" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 15px; text-align:center">
                        <input type="submit" value="Save" class="button" />
                    </div>
                </form>
            </div>
        </aside>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
