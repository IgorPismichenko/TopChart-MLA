@model TopChart_BLL.DTO.UsersDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="width:800px">
    <header>
        <div id="header">
            <a style="font-weight:bold; font-size:14pt; color:white; margin:5px" asp-area="" asp-controller="HomeAudio" asp-action="Audio">TOP Chart</a>
            <div style="margin-right: 5px">
                <div>
                    <label style="text-align:center; width: 100px; color:white">Hello @Context.Session.GetString("Login")</label>
                </div>
                <div>
                    <a asp-area="" asp-controller="HomeAudio" asp-action="Logout" style="font-size:10pt; color:white; display: inline-block; width: 100px;">Log out</a>
                </div>
            </div>
        </div>
    </header>
    <div style="display:flex">
        <main id="aside">
            <label style="font-weight:bold; font-size:12pt; color:#2F4F4F; margin:7px 0 0 10px">Menu</label><br />
            <hr style="margin:1px" />
           
                <a style="margin-left:15px; color:#2F4F4F; font-size:12px" asp-area="" asp-controller="HomeAudio" asp-action="EditUser">UsersList</a>

                
        </main>
        <aside id="main">
            <div id="mainReg">
                <h5 style="color:#2F4F4F; margin-top:30px">Edit</h5>
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        
                        <input  asp-for="Login" class="formControl" />
                        <span style="font-size: 8pt" asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div style="display: none">
                        
                        <input  asp-for="Password" class="formControl" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div style="display: none">
                        
                        <input  asp-for="Salt" class="formControl" />
                        <span asp-validation-for="Salt" class="text-danger"></span>
                    </div>
                    <div>
                        
                        <input  asp-for="Status" class="formControl" />
                        <span style="font-size: 8pt" asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 5px; text-align:center">
                        <input type="submit" value="Save" class="button" />
                    </div>
                </form>
            </div>
        </aside>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}